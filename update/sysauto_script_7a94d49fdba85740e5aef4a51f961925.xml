        <script><![CDATA[(function() {
	
	var days = parseInt(gs.getProperty('x_66238_kasa.renew_token_days', 60));
	var tok = new GlideRecord('x_66238_kasa_token');
	tok.addQuery('sys_updated_on', '<=', days);
